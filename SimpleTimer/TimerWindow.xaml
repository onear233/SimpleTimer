<Window
    x:Class="SimpleTimer.TimerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleTimer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:materialDesign3="http://materialdesigninxaml.net/winfx/xaml/themes/materialdesign3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TimerWindow"
    Width="200"
    Height="70"
    AllowsTransparency="True"
    Opacity="0.5"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    xmlns:viewmodels="clr-namespace:SimpleTimer.ViewModels"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:TimerViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <TextBlock
                Margin="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="{Binding TimeName}" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="26"
                FontWeight="Bold"
                Foreground="Black"
                Text="{Binding RemainingTime}" />
        </StackPanel>
    </Grid>
</Window>
