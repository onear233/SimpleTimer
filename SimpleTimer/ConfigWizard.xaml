<Window
    x:Class="SimpleTimer.ConfigWizard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SimpleTimer.Controls"
    xmlns:converters1="clr-namespace:SimpleTimer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:SimpleTimer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:viewmodels="clr-namespace:SimpleTimer.ViewModels"
    Title="创建新配置文件向导"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewmodels:ConfigWizardViewModel />
    </Window.DataContext>



    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--  导航栏  -->
            <materialDesign:ColorZone
                Grid.Row="0"
                Grid.Column="0"
                Padding="16"
                materialDesign:ElevationAssist.Elevation="Dp4"
                Mode="PrimaryMid">
                <Grid Margin="4,0,4,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="创建新配置文件向导" />
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <ListBox
                            Margin="6,-15,0,-15"
                            VerticalContentAlignment="Stretch"
                            materialDesign:ListBoxItemAssist.ShowSelection="False"
                            Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}"
                            IsHitTestVisible="False"
                            IsTabStop="False"
                            SelectedIndex="{Binding SlideIndex, Mode=TwoWay}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="IsTabStop" Value="False" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DataTemplate.Resources>
                                        <Style BasedOn="{StaticResource MaterialDesignTabRadioButton}" TargetType="RadioButton">
                                            <Setter Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}" />
                                            <Setter Property="FontSize" Value="18" />
                                            <Setter Property="Opacity" Value="0.75" />
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Opacity" Value="1.0" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                    <Setter Property="BorderThickness" Value="0,0,0,3" />
                                                </Trigger>
                                            </Style.Triggers>
                                            <Style.Resources>
                                                <Style TargetType="materialDesign:Ripple">
                                                    <Setter Property="Feedback" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type FrameworkElement}}, Path=(TextElement.Foreground)}" />
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                        <converters1:StringToRadioButtonSelectionConverter x:Key="StringToRadioButtonSelectionConverter" />
                                    </DataTemplate.Resources>
                                    <RadioButton
                                        Content="{Binding}"
                                        IsChecked="{Binding IsSelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBoxItem}}"
                                        IsTabStop="False" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <system:String>命名</system:String>
                            <system:String>时间</system:String>
                            <system:String>完成</system:String>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <materialDesign:Transitioner
                Grid.Row="1"
                AutoApplyTransitionOrigins="True"
                SelectedIndex="{Binding SlideIndex}">
                <!--  配置向导第一页：写入配置文件的名称与时长  -->
                <materialDesign:TransitionerSlide>
                    <Grid>
                        <StackPanel>
                            <TextBlock
                                Margin="16,16,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="欢迎使用 SimpleTimer 配置向导" />
                            <TextBlock
                                Margin="16,16,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                Text="第一步：为配置文件命名并指定其时间段" />
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <TextBox
                                    Width="256"
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    materialDesign:HintAssist.Hint="配置文件名称"
                                    AcceptsReturn="True"
                                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    Text="{Binding ConfigName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap" />
                                <TextBox
                                    Width="128"
                                    Margin="10"
                                    VerticalAlignment="Bottom"
                                    materialDesign:HintAssist.Hint="时间段数"
                                    AcceptsReturn="True"
                                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    Text="{Binding TimeIntervalCount}"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,0,16,16"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                            <Button
                                Click="Button_Click"
                                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                                IsEnabled="False"
                                Style="{StaticResource MaterialDesignPaperButton}">
                                <controls:IconText Kind="ArrowLeft" Text="上一步" />
                            </Button>
                            <Button Margin="6,0,0,0">
                                <controls:IconText Kind="ArrowRight" Text="下一步" />


                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{x:Static materialDesign:Transitioner.MoveNextCommand}" />
                                        <i:InvokeCommandAction Command="{Binding AddConfigCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <!--<Button Margin="6,0,0,0">
                                <controls:IconText Kind="Check" Text="完成" />
                            </Button>-->
                        </StackPanel>
                    </Grid>
                </materialDesign:TransitionerSlide>
                
                <!--  配置向导第二页：写入时间段  -->
                <materialDesign:TransitionerSlide>
                    <Grid>
                        <StackPanel>
                            <TextBlock
                                Margin="16,16,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                Text="第二步：为每个时间段命名" />
                            
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,0,16,16"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                            <Button
                                Click="Button_Click"
                                Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                                Style="{StaticResource MaterialDesignPaperButton}">
                                <controls:IconText Kind="ArrowLeft" Text="上一步" />
                            </Button>
                            <Button Margin="6,0,0,0">
                                <controls:IconText Kind="ArrowRight" Text="下一步" />


                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{x:Static materialDesign:Transitioner.MoveNextCommand}" />
                                        <i:InvokeCommandAction Command="{Binding AddConfigCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <!--<Button Margin="6,0,0,0">
            <controls:IconText Kind="Check" Text="完成" />
        </Button>-->
                        </StackPanel>
                    </Grid>
                </materialDesign:TransitionerSlide>
            </materialDesign:Transitioner>





        </Grid>
    </Grid>
</Window>
